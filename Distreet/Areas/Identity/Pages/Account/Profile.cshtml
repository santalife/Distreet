                <div class="col-1">
                    <img src="@Model.ApplicationUser.ProfilePicture" class="input-profile-img rounded float-start rounded-circle"/>
                </div>
                <div class="col-11 ps-0">
                    <form method="post">
                        <input type="text" class="form-control rounded-pill" placeholder="What's on your mind?" asp-for="Input.PostContent"/>
                        <input type="hidden" value="Standard" asp-for="Input.PostType"/>
                        <input type="submit" hidden/>
                    </form>
                </div>
            </div>
            <hr/>
            <ul class="nav justify-content-center">
                <li class="nav-item">
                    <a class="nav-link posting-text photo-btn" href="#"><i class="fas fa-photo-video"></i> Photo/Video</a>
                </li>
