@{
    foreach (var post in Model.UserPosts)
    {
        <div class="col-7 offset-md-5">
            <div class="card shadow border-0">
                <div class="card-body">
                    <div class="row">
                        <div class="col-1">
                            <img src="@post.ApplicationUser.ProfilePicture" class="input-profile-img rounded float-start rounded-circle"/>
                        </div>
                        <div class="col-11 ps-0">
                            <h5 class="posts-username mb-0">@post.ApplicationUser.FullName</h5>
                            <h6 class="text-muted post-date-header">@post.PostDateTime.ToString("MMMM dd, yyyy")</h6>
                        </div>
                    </div>

                    <div class="row mt-1">
                        <div class="col">
                            <p class="mb-0 fs-4">
                                @post.PostContent
                            </p>
                        </div>
                    </div>
                </div>
                <div class="card-body border-top border-top px-0 ms-3 me-3">
                    <div class="post-btn-section">
                        <ul class="nav nav-pills nav-justified">
                            <li class="nav-item">
                                <a class="btn btn-outline-danger w-100 border-0 fw-bold" aria-current="page" href="#"><i class="fas fa-thumbs-up"></i> Like</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-outline-success w-100 border-0 fw-bold" href="#"><i class="fas fa-comment-alt-dots"></i> Comment</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-outline-info w-100 border-0 fw-bold" href="#"><i class="fas fa-share"></i> Share</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="card-body border-top px-0 ms-3 me-3">
                    <div class="row">
                        <div class="col-1">
                            <img src="@user.ProfilePicture" class="input-profile-img rounded float-start rounded-circle"/>
                        </div>
                        <div class="col-11 ps-0">
                            <form method="post" asp-route-id="@post.Id" asp-page-handler="comment">
                                <input type="text" class="form-control rounded-pill" placeholder="What's on your mind?" asp-for="CommentInput.CommentContent"/>
                                <input type="submit" hidden/>
                            </form>
                        </div>

                        @if (post.PostComments != null)
                        {
                            foreach (var comments in post.PostComments.OrderByDescending(e => e.CommentDateTime))
                            {
                                <div class="row gy-2">
                                    <div class="col-1">
                                        <img src="@comments.CommentBy?.ProfilePicture" class="input-profile-img rounded float-start rounded-circle"/>
                                    </div>
                                    <div class="col-md-auto ps-0">
                                        <div class="comment-block bg-opacity-25 bg-dark p-2 px-3 pe-3">
                                            <h6 class="mb-0"><a class="text-decoration-none fw-bold text-black" asp-area="Identity" asp-page="Profile" asp-route-residentId="@comments.CommentBy?.UserName">@comments.CommentBy?.FullName</a></h6>
                                            <p class="mb-0">@comments.Comment</p>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    }
}


